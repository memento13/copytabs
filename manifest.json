{
  "manifest_version": 3,
  "name": "Copy Tabs",
  "version": "1.0.0",
  "description": "A simple Chrome extension to copy URLs from your browser tabs. Copy all tabs, selected tabs, or tabs from all windows with one click.",
  "permissions": ["tabs", "clipboardWrite", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 